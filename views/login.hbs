<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/style.css" />
    <link rel="shortcut icon" type="image/png" href="/public/img/favicon.png" />
    <title>The Hunt</title>
</head>

<body onload="loaded()">
    <div id="loader"><img src="/public/img/loading.gif" alt="Loading..." class="loading-gif"></div>
    <img src="/public/img/CSIDark(saturated).png" alt="CSI LOGO" class="csilogo" />
    <div class="container">
        <div class="header">
            <img src="/public/img/title.png" alt="LOGO" class="logo" />
            <h2 class="description">Crime scene go brrrrrr...</h2>
        </div>
        <div class="containerlev2">
            <form class="signup form" id="signup-form" method="POST" action="/api/user/login">
                <form class="login form" id="form">
                    <h1 class="heading">request to view files</h1>
                    <div class="form__group form__group--username">
                        <label for="username" class="form__label"> Email:</label>
                        <input type="text" class="form__input" id="email" placeholder="username123" name="email" />
                    </div>
                    <div class="form__group form__group--topic">
                        <label for="topic" class="form__label">Topic:</label>
                        <input disabled value="Crime Scene Investigation (CSI)" type="text" class="form__input"
                            id="topic" />
                    </div>
                    <div class="form__group form__group--password">
                        <label for="c-password" class="form__label">Password:</label>
                        <input type="password" class="form__input" id="password" placeholder="password123"
                            name="pass" />
                    </div>
                    <div class="form__group form__group--fileno">
                        <label for="fileno" class="form__label">File no.</label>
                        <input disabled type="text" class="form__input" id="fileno" />
                    </div>
                    <div class="form__group form__group--approved">
                        <img class="approved" src="/public/img/Approved(straight).png" alt="approved-img" />
                    </div>
                    <input type="submit" id="submitButton" class="hidden" />
                </form>
                <!-- <p class="alert alert-error">Error messages</p> -->
        </div>

        <a><button class="btn-submit" onclick="login()">LOG IN</button></a>
        <h4 class="bottom-line">
            No account yet? <span><a class="btn-redirect" href="/api/user/register">Sign Up</a> now</span>
        </h4>
    </div>

    <script>
        const number = document.getElementById("fileno");
        let rannum = Math.ceil(Math.random() * 10000000000);
        number.value = rannum;

        if (document.getElementById("loader")) document.querySelector(".container").style.display = 'none';
        function loaded() {
            document.getElementById("loader").style.display = "none";
            document.querySelector(".container").style.display = "flex";
        }

        function login() {
            document.getElementById("submitButton").click();
        }
    </script>
</body>

</html>